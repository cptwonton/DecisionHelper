<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dh_homepage_ab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="@string/dh_dummy_decision"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_weight="0.15" />

    <Button
        android:id="@+id/dh_decision_menu_btn_factors"
        android:text="@string/dh_decision_menu_factors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.10" />

    <Button
        android:id="@+id/dh_decision_menu_btn_rank"
        android:text="@string/dh_decision_menu_rank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

    <Button
        android:id="@+id/dh_decision_menu_btn_choices"
        android:text="@string/dh_decision_menu_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

    <Button
        android:id="@+id/dh_decision_menu_btn_result"
        android:text="@string/dh_decision_menu_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />

    <Button
        android:id="@+id/dh_decision_menu_btn_share"
        android:text="@string/dh_decision_menu_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09" />


</LinearLayout>