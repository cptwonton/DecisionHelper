<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Add a toolbar and a textview overlay to create the
    custom title -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/dh_add_choices_ab"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/dh_add_choices_btn_newchoice"
        android:text="@string/dh_addchoices_btn_newchoicetext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/dh_add_choices_hint"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp" />

    <Button
        android:id="@+id/dh_addchoices_btn_dummychoice1"
        android:text="Entry level consultant at Accenture, D.C."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="dh_addchoices_btn_choice1OnClick"/>

    <Button
        android:id="@+id/dh_addchoices_btn_dummychoice2"
        android:text="Healthcare consulting for Huron in Chicago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dh_addchoices_btn_dummychoice3"
        android:text="Your cousins tech startup in SF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dh_addchoices_btn_back"
        android:text="back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="dh_addchoices_btn_backOnClick"/>

</LinearLayout>