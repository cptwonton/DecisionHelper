<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/dh_registration_successMsg"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="180dp"
        android:textSize ="20dp"
        android:textColor = "?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="@string/dh_registration_successMsgEmail"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textColor = "?attr/colorPrimary"
        android:textSize = "20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:text="Go back to app"
        android:textColor="#F8F8FF"
        android:textSize = "25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight= "60dp"
        android:layout_marginTop="20dp"
        android:background="?attr/colorPrimary"
        android:id="@+id/dh_button_registration_back"
        android:onClick="dh_button_registration_backOnClick"/>
</LinearLayout>